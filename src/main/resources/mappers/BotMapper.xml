<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.holden.wxproject.mapper.BotMapper">
    <select id="ifExist" resultType="java.lang.Integer">
        select count(*) as cnt
        from bot_user
        where username = #{username}
    </select>

    <select id="balance" resultType="java.lang.Double">
        select balance
        from bot_user
        where username = #{username}
    </select>

    <select id="insert" parameterType="org.telegram.telegrambots.meta.api.objects.Chat">

    </select>

</mapper>